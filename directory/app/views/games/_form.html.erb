  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :developer %><br>
  <%= f.text_field :developer %><br><br>
  <%= f.label  :genre %><br>
  <%= f.text_field :genre %><br><br>
  <%= f.label  :publisher %><br>
  <%= f.text_field :publisher %><br><br>
  <%= f.label  :platform %><br>
  <%= f.text_field :platform %><br><br>
  <%= f.label  :rating %><br>
  <%= f.text_field :rating %><br><br>
  <%= f.label  :imgurl %><br>
  <%= f.text_field :imgurl %><br><br>
